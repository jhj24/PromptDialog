<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 点击效果 左边两个角为圆角-->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/bg_item_click" />
            <corners android:bottomLeftRadius="@dimen/item_round_radius" android:topLeftRadius="@dimen/item_round_radius" />
        </shape>
    </item>

    <item android:drawable="@android:color/transparent" />

</selector>