<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_alert_button"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_alert_button"
    android:orientation="vertical"
    android:visibility="gone">

    <View
        android:id="@+id/above_button_line"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp">

        <TextView
            android:id="@+id/btn_negative"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textSize="@dimen/textSize_alert_button"
            android:visibility="gone" />

        <View
            android:id="@+id/middle_button_line"
            android:layout_width="1.5px"
            android:layout_height="match_parent"
            android:background="@color/bg_view_line"
            android:visibility="gone" />

        <TextView
            android:id="@+id/btn_positive"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textSize="@dimen/textSize_alert_button"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>